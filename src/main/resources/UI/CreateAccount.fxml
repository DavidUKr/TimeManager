<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.Controllers.CreateAccountController">
   <children>
      <Label layoutX="84.0" layoutY="40.0" text="Create your Account">
         <font>
            <Font name="System Bold Italic" size="48.0" />
         </font>
      </Label>
      <TextField fx:id="txtFieldUsername" layoutX="226.0" layoutY="147.0" />
      <TextField fx:id="txtFieldPassword" layoutX="226.0" layoutY="200.0" />
      <TextField fx:id="txtFieldVerify" layoutX="226.0" layoutY="250.0" />
      <Button fx:id="btnTogglePers_Buss" layoutX="226.0" layoutY="304.0" mnemonicParsing="false" onAction="#switchPers_Buss" text="Personal/Business">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font></Button>
      <Label layoutX="120.0" layoutY="151.0" text="Username">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <Label layoutX="120.0" layoutY="204.0" text="Password">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <Label layoutX="120.0" layoutY="254.0" text="Verify Password">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <Button fx:id="btnCreate" layoutX="465.0" layoutY="340.0" mnemonicParsing="false" onAction="#createAcc" text="Create">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Label fx:id="lblStatus" layoutX="375.0" layoutY="308.0" text="Personal">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
      <HBox layoutX="14.0" layoutY="14.0" prefHeight="40.0" prefWidth="200.0">
         <children>
            <FontAwesomeIcon glyphName="ARROW_LEFT" onMouseClicked="#goBack" size="20" />
         </children>
      </HBox>
   </children>
</AnchorPane>
